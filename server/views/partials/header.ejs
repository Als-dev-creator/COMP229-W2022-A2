      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img
            src="/assests/images/user.jpg"
            alt="logo"
            width="50"
            height="50"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">

            <ul class="navbar-nav">
              <li class="nav-item">
                <% if (title == "Home") { %>
                    <a class="nav-link active" href="/">
                <% } else { %>
                    <a class="nav-link" href="/">
                <% } %>            
                    <i class="fas fa-home"></i> Home </a>
                </a>
              </li>
              <li class="nav-item">
                <% if (title == "About") { %>
                    <a class="nav-link active" href="/about">
                <% } else { %>
                    <a class="nav-link" href="/about">
                <% } %>            
                <i class="fas fa-solid fa-info"></i> About </a>
                </a>
              </li>
              <li class="nav-item">
                <% if (title == "Projects") { %>
                    <a class="nav-link active" href="/project">
                <% } else { %>
                    <a class="nav-link" href="/project">
                <% } %>            
                  <i class="fas fa-project-diagram"></i> Projects </a>
                </a>
              </li>
              <li class="nav-item">
                <% if (title == "Services") { %>
                    <a class="nav-link active" href="/services">
                <% } else { %>
                    <a class="nav-link" href="/services">
                <% } %>            
                <i class="fas fa-solid fa-desktop"></i> Services </a>
                </a>
              </li>
  
              <li class="nav-item">
                <% if (title == "Services") { %>
                    <a class="nav-link active" href="/business-list">
                <% } else { %>
                    <a class="nav-link" href="/business-list">
                <% } %>            
                <i class="fas fa-solid fa-list"></i> Business List</a>
                </a>
              </li>

              <li class="nav-item">
                <% if (title == "Contact") { %>
                    <a class="nav-link active" href="/contact">
                <% } else { %>
                    <a class="nav-link" href="/contact">
                <% } %>            
                <i class="fas fa-solid fa-address-card"></i> Contact</a>
                </a>
              </li>

            <li class="nav-item">  
              <% if (typeof userName == 'string' && userName) { %>
                <a class="nav-link" href="/users/signout" onclick="return confirm('Are you sure?')">Sign Out (<%= userName %>)</a>
              <% } else { %>
                <a class="nav-link" href="/users/signin">Signin</a>
              <% } %>            
            </li> 
          </ul>
        </div>
      </div>
    </nav>